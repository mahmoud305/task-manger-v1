<%- include('header.ejs') %>
<div class="container-fluid py-lg-0 py-5 m-lg-0 mb-5"
  style="width: 100% !important ; min-height:100vh; 
 background-image: linear-gradient(to bottom right, #EE4E34 50%, #FCEDDA 50.2%);
 background-size: cover; 
 ">
  <div class="row h-100">
    <div class="col-lg-6 my-lg-0 my-3 d-flex justify-content-center align-items-center  ">
      <div  class="row  w-100">
        <div class="col-md-12 col-xl-10 m-auto">

          <div class="card "
            style="background-color: #FCEDDA; border-radius: 15px;">
            <div class="card-body p-5" style="color: #EE4E34;">

              <i class="fas fa-quote-left fa-2x mb-4"></i>

              <p class="lead Orange"><%= quote.text %></p>

              <hr>

              <div class="d-flex justify-content-between">
                <p class="mb-0"><%= quote.author %></p>
                <h6 class="mb-0"><span class="badge rounded-pill"
                    style="background-color: rgba(0,0,0, 0.2);">876</span> <i
                    class="fas fa-heart ms-2"></i>
                </h6>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
    <div
      class="col-lg-6  d-flex justify-content-center align-items-center mb-lg-0">
      <% if(isSignIn){ %>
        <%- include('login.ejs',{isSignIn,errors}) %>
      <% } else{ %>  
        <%- include('signup.ejs',{errors}) %>
     <% } %>
   
   
  
    </div>
  </div>
</div>
<%- include('footer.ejs') %>